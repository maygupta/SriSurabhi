<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/google_pay_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/google_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickAction"
            android:text="@string/buy_with_google_pay"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/google_pay"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:onClick="onClickAction"
                android:text="@string/lite_tag"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_normal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:onClick="onClickAction"
                android:text="@string/standared_tag"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_normal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:onClick="onClickAction"
                android:text="@string/enterprise_tag"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/google_pay_ll"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/pay_pal_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickAction"
            android:text="@string/buy_with_paypal_pay"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_pal_pay"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="10dp"
            android:visibility="gone">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:onClick="onClickAction"
                android:text="@string/lite_tag"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_normal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:onClick="onClickAction"
                android:text="@string/standared_tag"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_normal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:onClick="onClickAction"
                android:text="@string/enterprise_tag"
                android:textAllCaps="false"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>